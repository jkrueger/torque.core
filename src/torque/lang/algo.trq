(defn not-empty
  [coll] (when (seq coll) coll))

(defn count [coll]
  (if (not (nil? coll))
    (if (satisfies? ICounted coll)
      (-count coll)
      (if (array? coll)
        (alength coll)
        (seq/count coll)))
    0))

