(defn find [coll k]
  (when (and (not (nil? coll))
             (associative? coll)
             (contains? coll k))
    [k (get coll k)]))

(defn get-in
  ([m ks]
   (get-in m ks nil))
  ([m ks not-found]
   (loop [sentinel lookup-sentinel
          m        m
          ks       (seq ks)]
     (if ks
       (if (not (satisfies? ILookup m))
         not-found
         (let [m (get m (first ks) sentinel)]
           (if (identical? sentinel m)
             not-found
             (recur sentinel m (next ks)))))
       m))))

(defn select-keys [map keyseq]
  (loop [ret  (hash-map)
         keys (seq keyseq)]
    (if keys
      (let [key   (first keys)
            entry (get map key ::not-found)]
        (recur
         (if (not= entry ::not-found)
           (assoc ret key entry)
           ret)
         (next keys)))
      (with-meta ret (meta map)))))

(defn assoc-in [m ks v]
  (let [k (first ks)]
    (if-let [ks (next ks)]
      (assoc m k (assoc-in (get m k) ks v))
      (assoc m k v))))

