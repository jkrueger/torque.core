(def ^:macro dotimes
  (fn dotimes [binding & body]
    (let [i (-nth binding 0)
          n (-nth binding 1)]
      `(let* [n# ~n]
         (loop* [~i 0]
           (when (< ~i n#)
             ~@body
             (recur (inc ~i))))))))

(defn identity [x]
  x)

(defn constantly [x]
  (fn [& args] x))

(declare comp)

(defn partial [f & fixed]
  (fn [& args]
    (apply f (concat fixed args))))

