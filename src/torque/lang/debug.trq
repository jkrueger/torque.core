(ns torque.lang.debug)

(def ^:macro spy
  (fn* [form]
    `(let* [res# ~form]
       (print (str '~form " => " res#))
       res#)))

(def ^:macro trace
  (fn* [descr form]
       `(do
          (print (str "start " ~descr))
          (let* [res# ~form]
            (print (str "end " ~descr " => " res#))
            res#))))
