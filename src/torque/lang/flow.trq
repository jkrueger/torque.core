;; -*- mode: clojure;-*-

(ns torque.lang.flow
  (:use
    [torque.lang.boot]
    [torque.lang.list]
    [torque.lang.cons]))

(def ^:macro when
  (fn* [test & body]
    (list 'if test (cons 'do body) nil)))

(def ^:macro when-not
  (fn* [test & body]
    (list 'if test nil (cons 'do body))))

(def ^:macro if-not
  (fn* [test then else]
    (list 'if test else then)))

