;; -*- mode: clojure;-*-

(ns torque.lang.let
  (:use
    [torque.lang.protocols]
    [torque.lang.boot]
    [torque.lang.list]
    [torque.lang.cons]))

(def ^:macro let
  (fn* let [& forms]
    (cons 'let* forms)))

(def ^:macro when-let
  (fn* when-let [binding & body]
    (list 'let [(-nth binding 0) (-nth binding 1)]
          (list 'if (-nth binding 0)
                (cons 'do body)
                nil))))

(def ^:macro if-let
  (fn* if-let [binding then else]
    (list 'let [(-nth binding 0) (-nth binding 1)]
          (list 'if (-nth binding 0)
                then
                else))))

(def ^:macro loop
  (fn* loop [& forms]
    (cons 'loop* forms)))
